<% layout("/layout/boilerPlate") %>
<body>
    <script>
        let mapToken= "<%= process.env.MAP_TOKEN %>";
        const coordinates = <%- JSON.stringify(show[0].geometry.coordinates) %>;
        const listingTitle= "<%= show[0].title %>"
    </script>
    <div class="row mt-3">
        <div class="col-6 offset-3">
    <h3><%= show[0].title %></h3>
    <div class="card mt-3 listing-card">
        <img src="<%=show[0].image.url %>" class="card-img-top" style="height:300px;" alt="https://cdn.pixabay.com/photo/2024/10/18/10/37/shop-9130001_1280.jpg">
        <div class="card-body mt-3">
            <p>Owned By <i><b><%= show[0].owner.username %></b></i></p>
            description : <%=show[0].description%> <br>
            Price :&#8377;<%=(show[0]?.price ?? 10).toLocaleString("en-IN") %><br>
            location : <%=show[0].location%><br>
            country : <%=show[0].country%><br>
        </div>
    </div>
    </div>
    </div>
    <% if(currUser && currUser._id.equals(show[0].owner._id)) {%>
    <div class="row">
    <div class="edit-btn">
        <div class="col-1 offset-3">
    <form method="GET" action="/listings/<%=show[0].id%>/edit">
        <button class="btn btn-dark">Edit</button>
    </form>
    </div>
    <div class="col-2 offset-0.2">
    <form method="post" action="/listings/<%=show[0].id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
    </form>
    </div>
    </div>
<% } %>

<div class="review col-6 offset-3 mt-5">
    <%  if(currUser){ %>
    <h5>Leave a Comment</h5>
  
    <form action="/listings/<%=show[0].id%>/reviews" method="POST" novalidate class="needs-validation">
    <div class="rating mt-3">
        <label for="rating" class="form-label">Rating</label>
            <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"/> -->
  <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>
        <div class="comment mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea class="form-control" col="6" row="3" name="review[comment]" id="comment" required></textarea>
            <div class="invalid-feedback">Please Add a Comment</div>
        </div>
        
        <button class="btn btn-outline-info mt-4 mb-3">Submit</button>
    </form>
<% } %>

</div>
    <hr>
        <div class="offset-1">
            <% if(show[0].review.length>0) {%>
            <div class="row">
                <p><b>All reviews</b></p>
            <% for(review of show[0].review){ %>
            <div class="card col-5 ms-3 mb-3">
                
                <div class="card-body">
                   <p class="card-title"><%= review.author.username %></p>
                    <!-- <p class="card-text"><% for(let i=1;i<=review.rating;i++) { %> 
                        <i class="fa-solid fa-star"></i>
                    <% } %></p> -->
                  <p class="starability-result card-text" data-rating="<%= review.rating %>" ></p>
                <p class="card-text"><%= review.comment %></p>
                </div>     
                <form class="mt-3 mb-3" method="POST" action="/listings/<%=show[0]._id%>/reviews/<%=review._id%>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
            </div>
            
        <% } %>
           
        </div>
        <% }%>
        </div>
            <div class="col-6 offset-3 mt-3">
            <h4>Where you'll be</h4>
            <div id="map"></div>
        </div>
    </div>
    <script src="/js/map.js"></script>
</body>
