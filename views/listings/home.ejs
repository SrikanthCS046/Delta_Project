<% layout("/layout/boilerPlate") %>
<style>
    #filters{
        display:flex;
        flex-wrap:wrap;
        margin-bottom: 2rem;
        align-items: center;
    }
    .filter{
        margin-top:1em;
        text-align:center;
        margin-right:1rem;
        opacity:0.7;
    }
    .filter:hover{
        opacity:1;
        cursor: pointer;
        transform: scale(1.08);
    }
    .filter a{
        font-size:0.9rem;
    }
    #filters a{
        text-decoration: none;
        color:black;
    }
    .tax-info{
        display:none;
    }

    .tax-toggle{
        border:1px solid black;
        border-radius:1rem;
        height:3.5rem;
        padding:0.8rem;
        display:flex;
        align-items:center;
        margin-right:1rem;
    }
    
</style>
