        <!-- TAX TOGGLE -->
        <div class="form-check-reverse form-switch ms-md-3 tax-toggle">
          <label class="form-check-label"
                 for="switchCheckDefault">
            Display Total after taxes
          </label>
          <input class="form-check-input" type="checkbox"
                 id="switchCheckDefault">
        </div>

      </div>
    </div>
  </div>
</nav>

    
    <!-- <h3>Choose your destination</h3>
    <h3>Popular homes in India</h3> -->
    <ul>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
   <% for(let list of lists){ %>
    <a href="/listings/<%=list.id%>" class="listing-card">
        <div class="card col listing-card">
        <img src="<%=list.image.url%>" class="card-img-top" style="height:20rem" alt="List Image">
         <div class="card-img-overlay">&hearts;</div>
        <div class="card-body">
            <b><%= list.title %></b><br>
            Price :&#8377;<%=list.price.toLocaleString("en-IN")%>
            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </div>  
    </div>
   </a>
 <%   } %>
 </div>

 </ul>

 <script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(tax of taxInfo){

            if(tax.style.display!="inline"){
                tax.style.display="inline";
            }
            else{
                tax.style.display="none";
            }
        }
    })
 </script>
</body>
