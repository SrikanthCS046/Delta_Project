<% layout("/layout/boilerPlate") %>
<body>
    <div class="row offset-2">
        <div class="col-8">
    <h3 class="mt-3 mb-3">Create New Listing</h3>

    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" placeholder="Enter your destiny Title" name="listing[title]" id="title" required>
            <!-- <div class="valid-feedback">This title is correct</div> -->
             <div class="invalid-feedback">Please Enter a valid title</div>
        </div>
            <div class="mb-3">
            <label for="des" class="form-label">description</label>
            <textarea class="form-control" placeholder="Tell us something about your destiny" name="listing[description]" id="des" required></textarea>
            <div class="invalid-feedback">This Field is required</div>
        </div>
            <!-- <div class="mb-3">
                <label for="img" class="form-label">Image Link</label>
                 <input class="form-control" placeholder="Paste the image link" name="listing[image.url]" id="img">
            </div> -->
            <div class="mb-3">
                <label for="img" class="form-label">Upload Image</label>
                 <input type="file" class="form-control" name="listing[image]" id="img">
            </div>
            </div>
            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" placeholder="Enter the Price" name="listing[price]" id="price" required>
                    <div class="invalid-feedback">Price Field is required</div>
                </div>
                <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <select id="country" name="listing[country]" class="form-select form-select-sm" aria-label="Small select example" required>
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="Japan">Japan</option>
                <option value="Canada">Canada</option>
                <option value="China">China</option>
                <option value="Nepal">Nepal</option>
                <option value="Sri lanka">Sri lanka</option>
                <option value="Australia">Australia</option>
            </select>
            <div class="invalid-feedback">This Field is required</div>
            </div>
            <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input class="form-control" placeholder="Enter the location" name="listing[location]" id="location" required>
            <div class="invalid-feedback">This Field is required</div>
        </div>

        <label for="category" class="form-label">Best Suits Your Home</label>
        <select id="category" name="listing[category]"class="form-select form-select-sm" aria-label="Small select example">
            <option value="Normal">Normal</option>    
            <option value="Camping">Camping</option>
                <option value="Arctic">Arctic</option>
                <option value="Top of the World">Mountains</option>
                <option value="Resort">Resort</option>
                <option value="Farm Stays">Farm Stays</option>
                <option value="Desert">Desert</option>
                <option value="Tree houses">Tree houses</option>
        </select>
            
            <button class="btn btn-dark mt-4">
                submit
            </button>

        </div>
    </form>
    </div>
    </div>  
</body>
