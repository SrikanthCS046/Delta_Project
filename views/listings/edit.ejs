<% layout("/layout/boilerPlate") %>
<body>
   <div class="row">
    <div class="col-8 offset-2 ">
    <h2 class="mt-3 mb-3">Edit Your Destination</h2>
    <form method="POST" action="/listings/<%= lists._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input class="form-control"  placeholder="Enter your destiny Title" name="listing[title]" id="title" value="<%=lists.title%>" required >
            <div class="invalid-feedback">This Field is required</div>
            </div>
            <div class="mb-3">
                <label for="des" class="form-label">description</label>
                <textarea class="form-control" placeholder="Tell us something about your destiny" name="listing[description]" id="des" required><%=lists.description%></textarea>
            <div class="invalid-feedback">This Field is required</div>
            </div>

            <div class="mb-3">
                Image<br>
                <img src="<%=originalImageUrl %>">
            </div>

            <div class="mb-3">
                <label for="Image" class="form-label">Upload New Image</label>
                <input class="form-control" type="file" name="listing[image]" id="image" value="<%=lists.image.url%>">
            </div> 
            <div class="row">
            <div class="mb-3 col-4"> 
            <label for="price" class="form-label">Price</label>
            <input  class="form-control" placeholder="Enter the Price" type="number" name="listing[price]" id="price" value="<%=lists.price%>" required>
        <div class="invalid-feedback">This Field is required</div>    
        </div>
            <div class="mb-3 col-8"> 
            <label for="country" class="form-label">Country</label>
            <select class="form-control" id="country" name="listing[country]" value="<%=lists.country%>" required>
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="Japan">Japan</option>
                <option value="Canada">Canada</option>
                <option value="China">China</option>
                <option value="Nepal">Nepal</option>
                <option value="Sri lanka">Sri lanka</option>
                <option value="Australia">Australia</option>
            </select>
            <div class="invalid-feedback">This Field is required</div>
            </div>

            </div>
            <div class="mb-3"> 
            <label for="location" class="form-label">location</label>
            <input class="form-control" placeholder="Enter the location" name="listing[location]" id="location" value="<%=lists.location%>" required>
        <div class="invalid-feedback">This Field is required</div>    
        </div>
            <button class="btn btn-dark mt-3">
                Submit
            </button>
        </div>
    </form>
    </div>
</div>
    
</body>
